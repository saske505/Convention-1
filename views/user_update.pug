extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='email') Email Address:
      input#email.form-control(type='text', placeholder='Email' name='email' value=(user === undefined ? '' : user.email))
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='Username' name='username' value=(user === undefined ? '' : user.username))
    button.btn.btn-primary(type='submit') Update User

  if errors 
    ul
      for error in errors
        li!= error.msg
