extends layout

block title
  title Booking Detail

block content
  main.container(role='main').text-center
    h1 Name: #{booking.name}
    p #[strong Price:] #{booking.price}
    p #[strong Quantity:] #{booking.quantity}
    form(method='POST' action='/booking/book/' + booking._id)
      button.btn.btn-lg.btn-primary.btn-block(type="submit") Book Now!