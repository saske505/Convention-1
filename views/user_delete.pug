extends layout

block title
  title Delete User

block content
  main.container(role='main').text-center
    h1 Delete: #{user.username}, #{user.email}
    p= user.lastname
    p Do you really want to delete this User?

    form(method='POST' action='')
      div.form-group
        input#userid.form-control(type='hidden',name='userid', required='true', value=user._id)
      button.btn.btn-primary(type='submit') Delete