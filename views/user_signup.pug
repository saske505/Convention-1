extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='email') Email Address:
      input#email.form-control(type='text', placeholder='Email' name='email' value=(undefined===user ? '' : user.email))
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='Username' name='username' value=(undefined===user ? '' : user.username))
      label(for='password') Password:
      input#password.form-control(type='password', placeholder='Password' name='password' value=(undefined===user ? '' : user.password))
      label(for='passwordConf') Confirm Password:
      input#passwordConf.form-control(type='text', placeholder='Confirm Password' name='passwordConf' value=(undefined===user ? '' : user.passwordConf))
    button.btn.btn-primary(type='submit') Sign Up

  if errors 
    ul
      for error in errors
        li!= error.msg