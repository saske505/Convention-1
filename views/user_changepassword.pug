extends layout

block title
  title Change Password

block stylesheets
  link(href="/stylesheets/generic-form.css" rel="stylesheet")

block content
  main.container(role='main').text-center
    h1.h3.mb-3.font-weight-normal Change Password
    form.generic-form(method='POST' action='')
      label.sr-only(for="password") Password
      input#inputPassword.form-control(type="password" name="password" placeholder="Password" required="" autofocus="")
      label.sr-only(for="passwordConf") Confirm Password
      input#inputPassword.form-control(type="password" name="passwordConf" placeholder="Confirm Password" required="" autofocus="")

      button.btn.btn-lg.btn-primary.btn-block(type="submit") Change Password
      
    if errors 
      ul.list-group
        for error in errors
          li.list-group-item!= error.msg
