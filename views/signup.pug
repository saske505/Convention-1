extends layout

block title
  title Sign Up

block stylesheets
  link(href="/stylesheets/generic-form.css" rel="stylesheet")

block content
  main.container(role='main').text-center
    form.generic-form(method='POST')
      img.mb-4(src="/images/brackets.svg" alt="" width="72" height="72")
      
      h1.h3.mb-3.font-weight-normal Sign Up
      label.sr-only(for="username") Username
      
      input#inputText.form-control(type="text" name="username" placeholder="Username" required="" autofocus="")
      label.sr-only(for="email") Email
      
      input#inputEmail.form-control(type="email" name="email" placeholder="Email Address" required="")
      label.sr-only(for="password") Password
      
      input#inputPassword.form-control(type="password" name="password" placeholder="Password" required="")
      label.sr-only(for="passwordConf") Confirm Password
      
      input#inputPasswordConf.form-control(type="password" name="passwordConf" placeholder="Confirm Password" required="")
      button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign Up

    if errors 
      ul.list-group
        for error in errors
          li.list-group-item!= error.msg