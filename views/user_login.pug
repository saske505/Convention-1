extends layout

block title
  title Log In

block stylesheets
  link(href="/stylesheets/generic-form.css" rel="stylesheet")

block content
  main.container(role='main').text-center
    form.generic-form(method='POST' action='')
      img.mb-4(src="/images/bootstrap-solid.svg" alt="" width="72" height="72")
      h1.h3.mb-3.font-weight-normal Log In
      label.sr-only(for="username") Username
      input#inputText.form-control(type="text" name="username" placeholder="Username" required="" autofocus="")
      label.sr-only(for="password") Password
      input#inputPassword.form-control(type="password" name="password" placeholder="Password" required="")
      .checkbox.mb-3
        label
          input(type="checkbox" value="remember-me")
          |  Remember me
      button.btn.btn-lg.btn-primary.btn-block(type="submit") Log In
      p.mt-5.mb-3.text-muted Â© 2017-2018

    if errors 
      ul.list-group
        for error in errors
          li.list-group-item!= error.msg
    if authFail 
      ul.list-group
        li.list-group-item!= authFail
